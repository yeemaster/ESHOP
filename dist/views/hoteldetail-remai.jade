li
  a.recom-good(href='#{_var_net}/hoteldetail?id=' + '#{remai[i]["objid"]}' + "&preid=" + '#{remai[i]["preobjid"]}')
    .img-wrap
      img(src='#{remai[i].img}', alt='')
    |       
    p.title #{remai[i].name}
    |       
    p.other
      span.amount #{remai[i].bought}
    |       
    p.price
      span.current-price #{remai[i].price}
      |       
      span.original-price
        del #{remai[i]["old-price"]}
